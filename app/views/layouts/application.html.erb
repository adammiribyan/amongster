<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= [controller_name, action_name].join(" ") %>">
  <div class="container">
    <header>
      <%= image_tag 'logo.png', class: 'logo' %>
    </header>

    <aside>
      <%= yield :sidebar %>
    </aside>

    <%= yield %>
  </div>

  <%= render 'metrika' %>
</body>
</html>
